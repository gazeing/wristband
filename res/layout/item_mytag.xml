<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/type_wb_1" />

    <TextView
        android:id="@+id/textView_tagname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_icon"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/imageView_icon"
        android:text=""
        android:textColor="@color/label_font"        
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView_tagvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_tagname"

        android:layout_alignLeft="@+id/textView_tagname"
        android:text=""
        android:textColor="@color/anto_red"        
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/imageView_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/textView_tagvalue"
        android:layout_marginRight="3dp"
        android:background="@drawable/bag_wb_on" />

</RelativeLayout>
